<script>
   

   function togglePasswordVisibility_OldPassword() 
   {
    var Input_01 = document.getElementById("Input-OldPassword");
    var ToggleButton_01 = document.querySelector(".OldPassword-toggle-btn");
    var FieldType_01 = Input_01.getAttribute("type");

    if (FieldType_01 === "password") {
        Input_01.setAttribute("type", "text");
        ToggleButton_01.innerHTML = '<i class="fa fa-eye-slash"></i>';
    } else {
        Input_01.setAttribute("type", "password");
        ToggleButton_01.innerHTML = '<i class="fa fa-eye"></i>';
    }
}


function togglePasswordVisibility_NewPassword() 
   {
    var Input_02 = document.getElementById("Input-NewPassword");
    var ToggleButton_02 = document.querySelector(".NewPassword-toggle-btn");
    var FieldType_02 = Input_02.getAttribute("type");

    if (FieldType_02 === "password") {
        Input_02.setAttribute("type", "text");
        ToggleButton_02.innerHTML = '<i class="fa fa-eye-slash"></i>';
    } else {
        Input_02.setAttribute("type", "password");
        ToggleButton_02.innerHTML = '<i class="fa fa-eye"></i>';
    }
}

function togglePasswordVisibility_ConfirmNewPassword() 
   {
    var Input_03 = document.getElementById("Input-ConfirmNewPassword");
    var ToggleButton_03 = document.querySelector(".ConfirmNewPassword-toggle-btn");
    var FieldType_03 = Input_03.getAttribute("type");

    if (FieldType_03 === "password") {
        Input_03.setAttribute("type", "text");
        ToggleButton_03.innerHTML = '<i class="fa fa-eye-slash"></i>';
    } else {
        Input_03.setAttribute("type", "password");
        ToggleButton_03.innerHTML = '<i class="fa fa-eye"></i>';
    }
}


</script>