  <body>
    <!-- Customer SignUp Start -->
    <div class="container">
      <div class="row">
        <div class="col-md-6 mx-auto">
          <div class="card my-6"  style="width: 600px; height: 400px;">
            <div class="card-body">


              <!--Form Start-->
             <form asp-action="ChangePassword" asp-Controller="ChangePassword">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>  
            

                             
                      
            <div class="form-group">
                <label asp-for="OldPassword" class="control-label"></label>
                 <div class="input-group">
                <input asp-for="OldPassword" type="password" class="form-control" id="Input-OldPassword" 
                name="OldPassword" placeholder="Enter old password"/>

                 <div class="input-group-append">
                        <button class="btn btn-outline-secondary OldPassword-toggle-btn"
                                type="button" onclick="togglePasswordVisibility_OldPassword()">
                            <i class="fa fa-eye" style= "color: Black;   cursor: pointer;"></i>
                        </button>
                 </div>     
                 </div>
                <span asp-validation-for="OldPassword" class="text-danger"></span>
            </div>


            <div class="form-group">
                <label asp-for="NewPassword" class="control-label"></label>
                 <div class="input-group">
                <input asp-for="NewPassword" type="password" class="form-control" id="Input-NewPassword" 
                name="NewPassword" placeholder="Enter new password"/>

                 <div class="input-group-append">
                        <button class="btn btn-outline-secondary NewPassword-toggle-btn"
                                type="button" onclick="togglePasswordVisibility_NewPassword()">
                            <i class="fa fa-eye" style= "color: Black;   cursor: pointer;"></i>
                        </button>
                 </div>     
                 </div>
                <span asp-validation-for="NewPassword" class="text-danger"></span>
            </div>


            <div class="form-group">
                <label asp-for="ConfirmNewPassword" class="control-label"></label>
                 <div class="input-group">
                <input asp-for="ConfirmNewPassword" type="password" class="form-control" id="Input-ConfirmNewPassword" 
                name="ConfirmNewPassword" placeholder="Confirm new password"/>

                 <div class="input-group-append">
                        <button class="btn btn-outline-secondary ConfirmNewPassword-toggle-btn"
                                type="button" onclick="togglePasswordVisibility_ConfirmNewPassword()">
                            <i class="fa fa-eye" style= "color: Black;  cursor: pointer;"></i>
                        </button>
                 </div>     
                 </div>
                <span asp-validation-for="ConfirmNewPassword" class="text-danger"></span>
            </div>



            
            
           <div class="form-group d-flex justify-content-between">
                <input type="submit" value="Save Changes" class="btn btn-block btn-primary font-weight-bold py-3" 
                        style="font-size: 16px; width: 250px;  margin: 0 auto; text-align: center; " />
                <a asp-action="MyAccount" asp-Controller="Account" 
                class="btn btn-block btn-primary font-weight-bold py-3"
                style="font-size: 16px; width: 250px;  margin: 0 auto; text-align: center; background-color: red; ">Back</a>
            </div>
        </form>
        <!--Form End-->




          </div>
        </div>
      </div>
    </div>
    </div>
    




  </body>


