                <!--PAGING Part-->
                <div class="col-12">

                    <nav class="pagination-container">
                        @if (pager.TotalPages > 0)
                        {
                            <ul class="pagination justify-content-center">
                                @if (pager.CurrentPage > 1)
                                {
                                    <li class="page-item">
                                        <a class="page-link" asp-controller="Shop" asp-action="ProductsByCategory" asp-route-id="@id" asp-route-pg="1">First</a>
                                    </li>
                                    <li class="page-item">
                                        <a class="page-link" asp-controller="Shop" asp-action="ProductsByCategory" asp-route-id="@id" asp-route-pg="@(pager.CurrentPage - 1)">Previous</a>
                                    </li>
                                }
                                @for (var pge = pager.StartPage; pge <= pager.EndPage; pge++)
                                {
                                    <li class="page-item @(pge == pager.CurrentPage ? "active" : "")">
                                        <a class="page-link" asp-controller="Shop" asp-action="ProductsByCategory" asp-route-id="@id" asp-route-pg="@pge">@pge</a>
                                    </li>
                                }
                                @if (pager.CurrentPage < pager.TotalPages)
                                {
                                    <li class="page-item">
                                        <a class="page-link" asp-controller="Shop" asp-action="ProductsByCategory" asp-route-id="@id" asp-route-pg="@(pager.CurrentPage + 1)">Next</a>
                                    </li>
                                    <li class="page-item">
                                        <a class="page-link" asp-controller="Shop" asp-action="ProductsByCategory" asp-route-id="@id" asp-route-pg="@pager.TotalPages">Last</a>
                                    </li>
                                }
                            </ul>
                        }
                    </nav>
                </div>
                <!--END PAGING PART-->
                @foreach (ShoppingProductsViewModel product in Model)
                {
                    <div class="col-lg-4 col-md-6 col-sm-6 pb-1 paginated-list">
                        <div class="product-item bg-light mb-4">
                            <div class="product-img position-relative overflow-hidden">
                                <img class="img-fluid w-100" src="@product.Image" alt="">
                                <div class="product-action">
                                    <a class="btn btn-outline-dark" asp-action="ProductDetails" asp-controller="Product" asp-route-id="@product.Id"><i>Order Now!</i></a>
                                </div>
                            </div>
                            <div class="text-center py-4">

                                <a asp-action="ProductDetails" asp-controller="Product" asp-route-id="@product.Id" class="h6 text-decoration-none text-truncate">@product.Name</a>
                                <div class="d-flex align-items-center justify-content-center mt-2">
                                    @{
                                        if (product.PriceAfterDisc == 0)
                                        {
                                            <h5>@product.PriceBeforeDisc</h5>

                                            <h6 class="text-muted ml-2"></h6>
                                        }
                                        else
                                        {
                                            <h5>@product.PriceAfterDisc</h5>

                                            <h6 class="text-muted ml-2"><del>@product.PriceBeforeDisc</del></h6>
                                        }
                                    }
                                </div>
                                <div class="d-flex align-items-center justify-content-center mb-1">
                                    @* <small class="fa fa-star text-primary mr-1"></small>
                                <small class="fa fa-star text-primary mr-1"></small>
                                <small class="fa fa-star text-primary mr-1"></small>
                                <small class="fa fa-star text-primary mr-1"></small>
                                <small class="fa fa-star text-primary mr-1"></small>
                                <small>(99)</small>*@
                                </div>
                            </div>
                        </div>
                    </div>
                }
