@model ECommerceMVC.ViewModels.EditUserViewModel

@{
    ViewData["Title"] = "Account Informtion";
    SelectList CountriesOptions = new SelectList(Model.Countries, "Id", "Name");
    ViewBag.Genders = new SelectList(Enum.GetValues(typeof(Gender)));
}



 <!-- Breadcrumb Start -->
    <div class="container-fluid">
        <div class="row px-xl-5">
            <div class="col-12">
                <nav class="breadcrumb bg-light mb-30">
                    <a class="breadcrumb-item text-dark" href="@Url.Action("MyAccount", "Account")">MyAccount</a>
                    <span class="breadcrumb-item active">Account Information</span>
                </nav>
            </div>
        </div>
    </div>
    <!-- Breadcrumb End -->

    <!-- Data Start --> 
    
 <style>
        .small-font {
  font-size: 18px;
}

      /* Rounded corners for card */
      .card {
        border-radius: 20px;
      }

      /* Style to center the Multi Shop text */
      .center {
        display: flex;
        justify-content: center;
        align-items: center;
        margin-bottom: 30px;
      }



      /* Set background */
      body {
        background-image: url('img/e-commerce-bg.jpg');
        background-size: cover;
      }
    </style>


  <body>
    <!-- Customer SignUp Start -->
    <div class="container">
      <div class="row">
        <div class="col-md-6 mx-auto">
          <div class="card my-6"  style="width: 600px; height: 800px;">
            <div class="card-body">


              <!--Form Start-->
             <form asp-action="Update" asp-Controller="ChangeAccountInformation">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>            
            <div class="form-group">
                <label asp-for="UserName" class="control-label"></label>
                <input asp-for="UserName" class="form-control" />
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FirstName" class="control-label"></label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LastName" class="control-label"></label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">

                <label asp-for="CountryId" class="control-label"></label>
                <select class="form-control custom-select" asp-for="CountryId" asp-items="CountriesOptions">
                    <!--List<Country>-->
                </select>
                <span asp-validation-for="CountryId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PhoneNumber" class="control-label"></label>
                <input asp-for="PhoneNumber" class="form-control" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DataOfBirth" class="control-label"></label>
                <input asp-for="DataOfBirth" class="form-control" />
                <span asp-validation-for="DataOfBirth" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Gender" class="control-label"></label>
                <select class="form-control" asp-for="Gender" asp-items="ViewBag.Genders">
                    <!--List<Gender>-->
                </select>
                <span asp-validation-for="Gender" class="text-danger"></span>
             </div>
           <div class="form-group d-flex justify-content-between">
                <input type="submit" value="Save Changes" class="btn btn-block btn-primary font-weight-bold py-3" 
                        style="font-size: 16px; width: 250px;  margin: 0 auto; text-align: center; " />
                <a asp-action="MyAccount" asp-Controller="Account" 
                class="btn btn-block btn-primary font-weight-bold py-3"
                style="font-size: 16px; width: 250px;  margin: 0 auto; text-align: center; background-color: red; ">Back</a>
            </div>
        </form>

          </div>
        </div>
      </div>
    </div>
    </div>
    <!--Form End-->





  </body>


       <!-- Data End --> 




                <a href="#" class="btn btn-primary back-to-top"
      ><i class="fa fa-angle-double-up"></i
    ></a>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/intl-tel-input/17.0.13/js/intlTelInput.js"></script>            
<script src="https://cdn.jsdelivr.net/jquery.validation/1.16.0/jquery.validate.min.js"></script>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}







   
