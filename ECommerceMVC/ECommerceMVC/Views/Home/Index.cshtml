
@model List<ShoppingProductsViewModel>
@{
    ViewData["Title"] = "Home Page";
}

<!-- Carousel Start -->
<div class=" row justify-content-md-center">
    
    <div class="col-md-6"  text-center">
<form>
            <input type="text" id="myInput" onkeyup="myFunction()" placeholder="Search for products..">

            <ul id="myUL">
                @foreach (ShoppingProductsViewModel product in Model)
                {
                    <li id="lid"><a href="/product/ProductDetails/@product.Id"><img src="@product.Image" width="50" height="50" />  @product.Name</a></li>
                }
            </ul>
         
</form>


</div>
